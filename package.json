{
  "name": "quakeweather",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Map-centric educational web app fusing USGS earthquakes with OpenWeather conditions",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "pages:dev": "wrangler pages dev dist --compatibility-date=2025-10-03",
    "pages:deploy": "wrangler pages deploy dist",
    "type-check": "tsc --noEmit",
    "train:model": "tsx tools/backtest/nowcast.ts",
    "test:etas": "tsx tools/backtest/test-etas.ts",
    "secret-scan": "npx gitleaks detect --no-banner --verbose || (echo '⚠️  Secrets detected! Please review and remove any hardcoded credentials.' && exit 1)"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.1",
    "hono": "^4.5.0",
    "mapbox-gl": "^3.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240725.0",
    "@types/mapbox-gl": "^3.1.0",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.20.6",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "wrangler": "^4.46.0"
  }
}
